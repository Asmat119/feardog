<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/videoback"
    tools:context=".ui.live.GoLivekFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="24dp"
        android:layout_marginHorizontal="12dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/regular1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="petlover"
            android:textSize="16sp"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/white"
            android:layout_marginLeft="12dp"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            app:cardBackgroundColor="#29FFFFFF"
            android:elevation="0dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="6dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="512"
                android:paddingVertical="6dp"
                android:paddingHorizontal="6dp"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/eye"
                />
        </androidx.cardview.widget.CardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="48dp"
            android:backgroundTint="#FF5B71"
            android:elevation="0dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="0dp"
            android:layout_height="32dp"
            android:layout_marginHorizontal="12dp">
            <TextView
                android:layout_width="match_parent"
                android:padding="8dp"
                android:textSize="12sp"
                android:text="Live"
                android:gravity="center"
                android:drawablePadding="6dp"
                android:backgroundTint="@android:color/transparent"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
              />

        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="27dp"
       >
        <com.google.android.material.card.MaterialCardView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="#29FFFFFF"
            android:elevation="0dp"
            app:cardBackgroundColor="#29FFFFFF"
            app:cardCornerRadius="100dp"
            app:cardElevation="0dp"
            app:strokeColor="@android:color/transparent"
            app:strokeWidth="1dp"
            android:layout_marginHorizontal="17dp">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/flip" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="#29FFFFFF"
            android:elevation="0dp"
            app:cardBackgroundColor="#29FFFFFF"
            app:cardCornerRadius="100dp"
            app:cardElevation="0dp"
            android:layout_marginHorizontal="16dp"
            app:strokeColor="@android:color/transparent"
            app:strokeWidth="1dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/color_filter" />

        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            app:cardCornerRadius="100dp"
            app:cardBackgroundColor="#80FFFFFF"
            android:layout_marginHorizontal="20dp"
            android:layout_height="wrap_content">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                app:cardCornerRadius="100dp"
                android:layout_margin="4dp"
                app:cardBackgroundColor="@color/white"
                android:id="@+id/btnStoplive"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="Stop Live"
                    android:textColor="#0E141B"
                    android:fontFamily="@font/inter_medium"
                    android:paddingVertical="13dp"
                    android:paddingHorizontal="31dp"
                    />
            </com.google.android.material.card.MaterialCardView>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="#29FFFFFF"
            android:elevation="0dp"
            app:cardBackgroundColor="#29FFFFFF"
            app:cardCornerRadius="100dp"
            app:cardElevation="0dp"
            app:strokeColor="@android:color/transparent"
            app:strokeWidth="1dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/share" />

        </com.google.android.material.card.MaterialCardView>


    </LinearLayout>


</LinearLayout>