<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.live.LiveFragment"
    android:background="@drawable/rectangle"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingVertical="16dp"

        android:layout_marginRight="20dp"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/close"
            android:id="@+id/btnBack"
            app:tint="@color/white" />
        <ImageButton
            android:layout_width="wrap_content"
            android:id="@+id/btnDownload"
            android:src="@drawable/flip"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="90dp"
            android:elevation="0dp"
            android:id="@+id/ivParis"
            android:focusable="true"
            app:cardElevation="0dp"
            app:cardCornerRadius="12dp"
            android:layout_height="112dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:scaleType="centerCrop"

                android:src="@drawable/rounded_rectangle"

                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    app:cardBackgroundColor="#6E6560"
                    app:cardCornerRadius="8dp"
                    android:fontFamily="@font/inter_medium"
                    android:textAllCaps="false"
                  android:layout_alignParentBottom="true"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Swap Cover"
                        android:layout_gravity="center"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:layout_toRightOf="@id/ivParis"
                        android:fontFamily="@font/inter_medium"
                        android:textAlignment="center"
                        />

                </com.google.android.material.card.MaterialCardView>
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Live streaming from the beautiful streets of Paris. Iâ€™m so exited about this spontaneous jorney ðŸ˜ðŸ˜³â˜ºï¸"
        android:textSize="14sp"
        android:textColor="@color/white"

        android:layout_toRightOf="@id/ivParis"
        android:layout_marginStart="16dp"

        />
    </RelativeLayout>


    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        >
        <com.google.android.material.card.MaterialCardView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="#29FFFFFF"
            android:elevation="0dp"
            app:cardBackgroundColor="#29FFFFFF"
            app:cardCornerRadius="100dp"
            app:cardElevation="0dp"
            app:strokeColor="@android:color/transparent"
            app:strokeWidth="1dp">
            <!--android:layout_marginHorizontal="73dp"-->

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/color_filter" />

        </com.google.android.material.card.MaterialCardView>



        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            app:cardCornerRadius="100dp"
            app:cardBackgroundColor="#80FF5B71"
            android:layout_marginHorizontal="28dp"

            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                app:cardCornerRadius="100dp"
                android:layout_margin="4dp"
                app:cardBackgroundColor="@color/red"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="Go Live"
                    android:textColor="@color/white"
                    android:fontFamily="@font/inter_medium"
                    android:paddingVertical="13dp"
                    android:paddingHorizontal="31dp"

                    />


            </com.google.android.material.card.MaterialCardView>


        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="#29FFFFFF"
            android:elevation="0dp"
            app:cardBackgroundColor="#29FFFFFF"
            app:cardCornerRadius="100dp"
            app:cardElevation="0dp"
            app:strokeColor="@android:color/transparent"
            app:strokeWidth="1dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/share" />

        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="8dp"
        android:layout_marginBottom="48dp"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Live"
            android:textSize="15sp"
            android:textColor="@color/white"/>



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/line"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="12dp"

            app:tint="#52FFFFFF" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Story"
            android:textColor="#8FFFFFFF"
            android:textSize="15sp"
            />
    </LinearLayout>

</LinearLayout>