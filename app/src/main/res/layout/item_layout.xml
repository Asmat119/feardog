<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="15dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/inter_medium"
        android:text="Yesterday"
        android:textSize="13sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/avatar1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="6dp"
                android:src="@drawable/avatar" />

            <ImageView
                android:id="@+id/avatar2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="17dp"
                android:layout_marginRight="4dp"
                android:src="@drawable/avatar_1"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_toEndOf="@id/avatar1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvFirstName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_medium"
                        android:text="armholegetaway"
                        android:textColor="@color/light_black"
                        android:textSize="13sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvAnd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="and"
                        android:textSize="13sp"
                        android:visibility="gone" />


                </LinearLayout>

                <TextView
                    android:id="@+id/tvSecondName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:text="mixtapenegative"
                    android:textColor="@color/light_black"
                    android:textSize="13sp"

                    />

                <TextView
                    android:id="@+id/tvLikeVideo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="liked your video ・ 1h"
                    android:textSize="12sp" />

            </LinearLayout>


        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/coverImage"
            android:layout_width="56dp"
            android:layout_height="80dp"
            android:src="@drawable/cover"

            android:visibility="gone" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"


            app:elevation="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:padding="2dp"
            android:outlineSpotShadowColor="@color/red"
            android:outlineAmbientShadowColor="@color/red"
            android:outlineProvider="background"
            android:stateListAnimator="@navigation/mobile_navigation"
            android:backgroundTint="@color/light_white"
            android:elevation="5dp"
            android:fontFamily="@font/inter_medium"
            android:text="Friends"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:backgroundTint="@null"
            app:cornerRadius="100dp"
             />




    </LinearLayout>

