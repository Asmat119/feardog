<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="16dp">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:strokeWidth="1dp"
        android:id="@+id/cvHash"
        app:strokeColor="#E8EAED"
        app:cardElevation="0dp"
        android:elevation="0dp"
        app:cardCornerRadius="100dp">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/hash"
        android:layout_margin="18dp"
        />
    </com.google.android.material.card.MaterialCardView>
 <TextView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="travel"
     android:layout_toRightOf="@id/cvHash"
     android:id="@+id/tvTravel"
     android:layout_marginStart="12dp"
     android:textSize="15sp"
     android:textColor="#2B323B"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/cvHash"
        android:layout_marginStart="12dp"
        android:layout_below="@id/tvTravel"
        android:layout_height="wrap_content"
        android:text="2.4M ãƒ» Trending Hashtag"
        android:textSize="12sp"
        android:textColor="#A4ADB7"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/union_r"
        android:layout_alignParentRight="true"
        android:backgroundTint="@android:color/transparent"
        />
</RelativeLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_gravity="center_vertical"
        android:layout_height="212dp"
        android:layout_marginTop="14dp">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/travel"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="16dp"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/play___small"
            android:drawablePadding="6dp"
            android:text="215.8K"
            android:layout_marginHorizontal="12dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="13sp"
            />
    </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>