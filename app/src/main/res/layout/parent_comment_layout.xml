<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginVertical="8dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_toStartOf="@id/layoutLike"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:elevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="100dp"
                android:id="@+id/cvBorder"
                app:cardElevation="0dp"
                app:strokeColor="#FF5B71"
                app:strokeWidth="2.3dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:padding="2dp"
                    android:id="@+id/imAvatar"
                    android:src="@drawable/regular" />
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="8dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="travelguru"
                        android:id="@+id/tvUserName"
                        android:textColor="#0E141B"
                        android:textSize="13sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text="Creator"
                        android:id="@+id/tvCreator"
                        android:textColor="#FF5B71"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text="2w"
                        android:id="@+id/tvDay"
                        android:textColor="#6C7989"
                        android:textSize="13sp" />
                </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="In integer suspendisse ridiculus vulputate tortor egestas ðŸ˜"
                        android:textColor="#2B323B"
                        android:id="@+id/tvMessage"
                        android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/layoutLike"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="15dp"
                android:id="@+id/ivHeart"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:src="@drawable/heart" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1024"
                android:textColor="#A4ADB7"
                android:textSize="12sp" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>