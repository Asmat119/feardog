<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginHorizontal="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

        <com.google.android.material.card.MaterialCardView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:elevation="0dp"
            android:id="@+id/cvBorder"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="100dp"
            android:layout_gravity="center"
            app:cardElevation="0dp"
            app:strokeColor="#FF5B71"
            app:strokeWidth="2.3dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:padding="2dp"
                android:id="@+id/imAvatar"
                android:src="@drawable/ann" />
        </com.google.android.material.card.MaterialCardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Annette Black"
            android:id="@+id/tvName"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:textColor="#2B323B"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="unstylishhelper"
            android:textColor="#6C7989"
            android:id="@+id/tvAcc"
            android:layout_gravity="center"
            android:textSize="12sp"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:paddingVertical="7dp"
            android:text="Follow"
            app:cornerRadius="100dp"
            android:textSize="13sp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:backgroundTint="#FF5B71"
            android:textColor="@color/white"
            />
    </LinearLayout>
